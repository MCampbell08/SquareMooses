@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.jpg" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner3.jpg" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner4.jpg" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner5.jpg" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner6.jpg" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row bord">
    <h2 id="nomHustler">Who is a hustler..?</h2>
    <hr />
    <form>
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <h2 class="infoHeader">The hustler's information</h2>
            <div class="hustlerInfo info">
                <div class="question">
                    <p>Who would you like to award?</p>
                    <input type="text" />
                </div>
                <div class="question">
                    <p>Why are they a hustler?</p>
                    <input type="checkbox" name="motto" value="motto1">Being their best
                    <input type="checkbox" name="motto" value="motto2">Achieving more together<br />
                    <input type="checkbox" name="motto" value="motto3">Thinking beyond their role
                    <input type="checkbox" name="motto" value="motto4">Making the plane<br />
                    <input type="checkbox" name="motto" value="motto5">Serving to win
                    <input type="checkbox" name="motto" value="motto6">Making it happen
                </div>
                <div class="question">
                    <p>What is their department?</p>
                    <select name="departments">
                        <option value="Production">Production</option>
                        <option value="Marketing">Marketing</option>
                        <option value="HumanResourceManagement">Human Resource Management</option>
                        <option value="Purchasing">Purchasing</option>
                        <option value="AccountingAndFinance">Accounting and Finance</option>
                        <option value="ResearchAndDevelopment">Research and Development</option>
                    </select>
                </div>
                <div class="question">
                    <p>What location are they at?</p>
                    <select name="location">
                        <option value="draper">Draper, UT</option>
                        <option value="provo">Provo, UT</option>
                        <option value="sanclemente">San Clemente, CA</option>
                    </select>
                </div>
                <div class="question">
                    <p>What is their email?</p>
                    <input type="text" />
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <h2 class="infoHeader">Your information</h2>
            <div class="adminInfo info">
                <div class="question">
                    <p>What's your name?</p>
                    <input type="text" />
                </div>
                <div class="question">
                    <p>What's your email?</p>
                    <input type="text" />
                </div>
                <div class="question">
                    <p>Submission date?</p>
                    <input type="text" />
                </div>
                <div class="question">
                    <p>Reason for your submission?</p>
                    <input type="text" />
                </div>
            </div>
        </div>
    </form>

    <div class="row">
        <div class="submission">
            <input id="submit" type="submit" />
        </div>
    </div>
    
</div>


